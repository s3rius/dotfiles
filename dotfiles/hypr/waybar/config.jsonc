// -*- mode: jsonc -*-
{
    "position": "top",
    "height": 15, // Waybar height (to be removed for auto height)
    // "spacing": 10, // Gaps between modules (4px)
    "margin-top": 10,
    "margin-left": 15,
    "margin-right": 15,
    "reload_style_on_change": true,
    "reverse-direction": true,
    // Choose the order of the modules
    "modules-left": [
        "pulseaudio",
        "battery",
        "hyprland/language",
        "clock"
    ],
    "modules-center": [
        "hyprland/workspaces"
    ],
    "modules-right": [
   	  "hyprland/submap",
      "tray"
    ],
    "pulseaudio": {
        "format": "{icon}   {volume}%",
        "format-icons": ["", "", "", "",  "",  "", "", ""],
        "format-muted": " ✘",
        "on-click": "pavucontrol"
    },
    "battery": {
        "interval": 3,
        "states": {
            "critical": 15,
        },
        "format": "{icon}   {capacity}",
        "format-icons": ["", "", "", "", ""],
        "format-plugged": "󱐋 {capacity}",
        "max-length": 25
    },
  "tray": {
    // "icon-size": 21,
        "spacing": 10,
    },
    "clock": {
        "format": "   {:%H:%M}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format-alt": "   {:%d-%m-%Y %H:%M}"
    },
    "hyprland/language": {
        "format": "   {}",
        "format-en": "en",
        "format-ru": "ru",
        "format-dk": "dk"
    },
    "hyprland/submap": {
        "format": " {} "
    },
    "hyprland/workspaces": {
      "all-outputs": false,
      "format": "{icon}",
      "default-icon": " ",
      "format-icons": {
        "1": "",
        "2": "",
        "3": "",
        "9": "",
      },
      "max-length": 25,
      // The maximum number of workspaces to display
      // If there are more, they will be hidden
      // Set to 0 to display all workspaces
      // If you want to display all workspaces, set this to 0
      // and remove the max-length option
      "max-workspaces": 0
    }
}
